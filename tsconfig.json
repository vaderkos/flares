{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "./packages/**/*.json",
    "./packages/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./**/node_modules",
    "./**/node_modules"
  ],
  "ts-node": {
    "files": true
  }
}