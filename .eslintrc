{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint/eslint-plugin",
    "unicorn"
  ],
  "extends": [],
  "ignorePatterns": ["dist", "gulpfile.ts"],
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": "off",
    "quotes": "off",
    "indent": "off",
    "camelcase": "off",
    "brace-style": "off",
    "no-redeclare": "off",
    "no-use-before-define": "off",
    "no-dupe-class-members": "off",
    "space-before-function-paren": "off",


    "yoda": "warn",
    "eqeqeq": "warn",
    "new-parens": "warn",
    "semi-spacing": "warn",
    "no-buffer-constructor": "warn",
    "unicorn/error-message": "warn",
    "unicorn/prefer-includes": "warn",
    "unicorn/no-unsafe-regex": "warn",
    "unicorn/new-for-builtins": "warn",
    "unicorn/prefer-string-slice": "warn",
    "unicorn/prefer-trim-start-end": "warn",
    "unicorn/no-unreadable-array-destructuring": "warn",

    "no-restricted-syntax": ["warn", { "selector": "ExportDefaultDeclaration", "message": "Prefer named exports" }],
    "newline-per-chained-call": ["warn", { "ignoreChainWithDepth": 2 }],
    "max-len": ["warn", 120],
    "@typescript-eslint/indent": ["warn", 4],

    "curly": "error",
    "use-isnan": "error",
    "no-iterator": "error",
    "no-debugger": "error",
    "no-ex-assign": "error",
    "no-dupe-keys": "error",
    "no-dupe-args": "error",
    "no-cond-assign": "error",
    "no-unreachable": "error",
    "no-dupe-else-if": "error",
    "no-empty-pattern": "error",
    "no-unsafe-finally": "error",
    "no-invalid-regexp": "error",
    "no-unsafe-negation": "error",
    "no-compare-neg-zero": "error",
    "valid-typeof": ["error", { "requireStringLiterals": true }],
    "max-nested-callbacks": ["warn", 5],
    "wrap-iife": ["error", "inside"],
    "unicorn/filename-case": ["error", {
      "case": "kebabCase"
    }],

    "@typescript-eslint/unbound-method": "off",
    "@typescript-eslint/no-explicit-any": "off",


    "@typescript-eslint/semi": ["warn", "never"],
    "@typescript-eslint/brace-style": "warn",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/await-thenable": "warn",
    "@typescript-eslint/func-call-spacing": "warn",
    "@typescript-eslint/no-require-imports": "warn",
    "@typescript-eslint/no-misused-promises": "warn",
    "@typescript-eslint/member-delimiter-style": ["warn", {
      "multiline": {
        "delimiter": "none",
        "requireLast": false
      }
    }],
    "@typescript-eslint/type-annotation-spacing": ["warn", {
      "after":  true,
      "before":  false,
      "overrides": {
        "arrow": {
          "before": true,
          "after": true
        }
      }
    }],
    "@typescript-eslint/space-before-function-paren": ["warn", "always"],
    "@typescript-eslint/quotes": ["warn", "single"],
    "@typescript-eslint/no-use-before-define": "warn",

//    "@typescript-eslint/no-misused-new": "error",
    "@typescript-eslint/no-dupe-class-members": "error",
    "@typescript-eslint/no-useless-constructor": "error",
    "@typescript-eslint/restrict-plus-operands": "error"
  },
  "overrides": [
    {
      "files": ["*.spec.ts"],
      "rules": {
        "newline-per-chained-call": "off",
        "@typescript-eslint/explicit-function-return-type": "off"
      }
    },
    {
      "files": ["*.js"],
      "rules": {
        "@typescript-eslint/*": "off"
      }
    }
  ]
}